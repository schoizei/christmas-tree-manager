@page "/distribution-tours"@attribute [Authorize]@inject IJSRuntime JSRuntime@inject NavigationManager NavigationManager@inject DialogService DialogService@inject ContextMenuService ContextMenuService@inject TooltipService TooltipService@inject NotificationService NotificationService@inject ApplicationDbService ApplicationDbService<PageTitle>Zetteltouren</PageTitle><RadzenStack>    <RadzenRow AlignItems="AlignItems.Center">        <RadzenColumn Size="12" SizeMD="6">            <RadzenText Text="Zetteltouren" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />        </RadzenColumn>        <RadzenColumn Size="12" SizeMD="6">            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />                    <RadzenSplitButtonItem Text="CSV" Value="csv" />                </RadzenSplitButton>                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />            </RadzenStack>        </RadzenColumn>    </RadzenRow>    <RadzenRow>        <RadzenColumn SizeMD=12>            <RadzenDataGrid @ref="grid0" ColumnWidth="200px" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30}) Data="@distributionTours" TItem="DistributionTour" RowDoubleClick="@EditRow">                <Columns>                    <RadzenDataGridColumn TItem="DistributionTour" Property="Name" Title="Name">                    </RadzenDataGridColumn>                    <RadzenDataGridColumn TItem="DistributionTour" Property="Staff" Title="Mitarbeiter">                    </RadzenDataGridColumn>                    <RadzenDataGridColumn TItem="DistributionTour" Property="CreatedAt" Title="Erstelldatum">                    </RadzenDataGridColumn>                    <RadzenDataGridColumn TItem="DistributionTour" Property="CreatedBy" Title="Ersteller">                    </RadzenDataGridColumn>                    <RadzenDataGridColumn TItem="DistributionTour" Property="UpdatedAt" Title="Änderungsdatum">                    </RadzenDataGridColumn>                    <RadzenDataGridColumn TItem="DistributionTour" Property="UpdatedBy" Title="Bearbeiter">                    </RadzenDataGridColumn>                    <RadzenDataGridColumn TItem="DistributionTour" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">                        <Template Context="distributionTour">                            <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium" Shade="Shade.Lighter" Variant="Variant.Flat" Click=@(args => GridDeleteButtonClick(args, distributionTour)) @onclick:stopPropagation="true" />                        </Template>                    </RadzenDataGridColumn>                </Columns>            </RadzenDataGrid>        </RadzenColumn>    </RadzenRow></RadzenStack>@code {    [Inject]
    protected SecurityService Security { get; set; } = null!;

    protected IEnumerable<DistributionTour> distributionTours = null!;
    protected RadzenDataGrid<DistributionTour> grid0 = null!;

    protected override async Task OnInitializedAsync()
    {
        distributionTours = await ApplicationDbService.GetDistributionTours();
    }

    protected async Task AddButtonClick(MouseEventArgs args)
    {
        await DialogService.OpenAsync<AddDistributionTour>("Neue Zetteltour", null);

        distributionTours = await ApplicationDbService.GetDistributionTours();
        await grid0.Reload();
    }

    protected async Task EditRow(DataGridRowMouseEventArgs<DistributionTour> args)
    {
        await DialogService.OpenAsync<EditDistributionTour>("Zetteltour bearbeiten", new Dictionary<string, object> { { "Id", args.Data.Id } });

        distributionTours = await ApplicationDbService.GetDistributionTours();
        await grid0.Reload();
    }

    protected async Task GridDeleteButtonClick(MouseEventArgs args, DistributionTour distributionTour)
    {
        try
        {
            if (await DialogService.Confirm("Sind Sie sicher, dass Sie diese Zetteltour l&ouml;schen wollen?") == true)
            {
                var deleteResult = await ApplicationDbService.DeleteDistributionTour(distributionTour.Id);
                if (deleteResult != null)
                {
                    await grid0.Reload();
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage                {                    Severity = NotificationSeverity.Error,                    Summary = $"Error",                    Detail = $"Sammlungstour kann nicht gel&ouml;scht werden"                });
        }
    }

    protected async Task ExportClick(RadzenSplitButtonItem args)
    {
        if (args?.Value == "csv")
        {
            await ApplicationDbService.ExportDistributionToursToCSV(new Query                {                    Filter = $@"{(string.IsNullOrEmpty(grid0.Query.Filter) ? "true" : grid0.Query.Filter)}",                    OrderBy = $"{grid0.Query.OrderBy}",                    Expand = "",                    Select = string.Join(",", grid0.ColumnsCollection.Where(c => c.GetVisible() && !string.IsNullOrEmpty(c.Property)).Select(c => c.Property.Contains(".") ? c.Property + " as " + c.Property.Replace(".", "") : c.Property))                }, "DistributionTours");
        }

        if (args == null || args.Value == "xlsx")
        {
            await ApplicationDbService.ExportDistributionToursToExcel(new Query                {                    Filter = $@"{(string.IsNullOrEmpty(grid0.Query.Filter) ? "true" : grid0.Query.Filter)}",                    OrderBy = $"{grid0.Query.OrderBy}",                    Expand = "",                    Select = string.Join(",", grid0.ColumnsCollection.Where(c => c.GetVisible() && !string.IsNullOrEmpty(c.Property)).Select(c => c.Property.Contains(".") ? c.Property + " as " + c.Property.Replace(".", "") : c.Property))                }, "DistributionTours");
        }
    }}